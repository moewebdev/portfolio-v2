---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/portfolio-favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	
	@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700;800;900&family=Work+Sans:wght@300;400;600;700;800;900&display=swap');

	*{
		margin: 0; 
		padding: 0;
		box-sizing: border-box;
	}
	
	:root{
		--accent-font: 'Poppins', sans-serif; 
		--base-font: 'Work sans', sans-serif; 
		--off-white: #f2f2f2;
		--section-spacing: 4em;
	}

	html {
		font-family: system-ui, sans-serif;
		font-size: 18px; 
	}

	body{
		color: var(--off-white);
		font-size: 1rem;
		line-height: 1.5;
		background-image: url('../assets/images/clement-helardot-95YRwf6CNw8-unsplash.jpg');
		background-size: cover;
		background-position: center;
		background-repeat: no-repeat;
	}

	.bg-overlay{
		background-color:rgba(28,34,54, 0.9); 
		padding-top: 72px;
		padding-left: 27px; 
		padding-right: 27px;
	}

	h2{
		font-family: 'Poppins', sans-serif;
		font-size: 2rem;
	}

	p{
		font-family: 'Work sans', sans-serif;
		max-width: 60ch;
	}
	
</style>
