---
import Layout from '../layouts/Layout.astro';
import Form from '../components/ContactForm.astro'; 
import profile from '../assets/images/profile.jpg';

---

<Layout title="Moses McKnight - Software Developer | Graphic Designer">
	<div class="bg-overlay">
		<main>
			<section class="about-section">
				<div class="img-container">
					<img src={profile} class="profile-img" alt="Moses - Software Developer & Graphic Designer" />
				</div>
				<h2>👋🏾 Hello! I'm Moses</h2>
				<p>
					I'm a fullstack developer and designer that is passionate about
					helping businesses achieve their goals through technology and design. 
				</p>
				<p>
					Currently, I am working on a rebuild and redesign of this site. It will 
					be back soon with new and exciting features! In the meantime, feel free to 
					reachout through the social links or the contact form below!
				</p>
				<div class="social-container">
					<div>
						<!-- email icon -->
						<a href="mailto:tmmwebdev@gmail.com">Email</a>
					</div>
					
					<div>
						<!-- github icon -->
						<a href="https://github.com/moewebdev">Github</a>
					</div>

					<div>
						<!-- linkedin icon  -->
						<a href="https://www.linkedin.com/in/moses-mcknight-848b61267/">Linkedin</a>
					</div>
				</div>
			</section>

			<section class="contact-section">
				<h2>👨🏾‍💻 Get in touch</h2>
				<p>
					Interested in working together? Fill out the form below and 
					I'll get back to you as soon as possible!
				</p>
			
				<Form /> 
			</section>
			
		</main>
		<footer>
			©mosesmcknight2023
		</footer>
	</div>
</Layout>

<style>
	/* -- Shared Styles -- */ 
	.about-section,
	.contact-section{
		margin-left: auto; 
		margin-right: auto; 
		margin-bottom: var(--section-spacing); 
	}

	.about-section p,
	.contact-section p{
		margin-bottom: 27px;
	}

	/* -- About Section -- */ 
	.img-container{
		width: 216px; 
		height: 216px; 
		border-radius: 100%;
		margin-bottom: 27px;
	}

	.profile-img{
		width: 100%;
		height: auto;
		display: block;
		border-radius: 216px;
	}

	.social-container{
		display: flex;
		gap: 27px;
	}

	.social-container a{
		color: var(--off-white);
		text-decoration: none;
		border: 1px solid var(--off-white);
		display: block;
		padding: 9px 18px;
		border-radius: 9px;
		cursor: pointer;
		font-weight: bold;
	}

	.social-container a:hover{
		color: #1c2236; 
		background-color: var(--off-white);
	}
	
	/* -- Footer Section -- */ 
	footer{
		text-align: center;
		padding: 27px; 
	}

	/* -- Media Queries -- */
	@media screen and (min-width: 768px){
		.about-section, 
		.contact-section{
			width: 75%;
		}
	}

	@media screen and  (min-width: 992px){
		.about-section,
		.contact-section{
			width: 50%; 
		}
	}
</style>
